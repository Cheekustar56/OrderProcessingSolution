<Project Sdk="Microsoft.NET.Sdk.Worker">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <!-- Reference OrderWeb but exclude content files to avoid conflicts -->
    <ProjectReference Include="..\OrderWeb\OrderWeb.csproj">
      <ExcludeAssets>contentFiles;runtime;native;analyzers</ExcludeAssets>
      <Private>true</Private> <!-- ensures DLL is copied to output -->
    </ProjectReference>

    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Only include the local appsettings.json -->
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </None>
  </ItemGroup>
</Project>
