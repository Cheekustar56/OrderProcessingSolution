<Project Sdk="Microsoft.NET.Sdk.Worker">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <!-- Reference OrderWeb project; copy DLLs but avoid conflicts -->
    <ProjectReference Include="..\OrderWeb\OrderWeb.csproj">
      <Private>true</Private> <!-- Copy DLLs -->
    </ProjectReference>

    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <!-- Keep OrderProcessor's own appsettings.json -->
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude OrderWeb's appsettings.json from being copied/published -->
    <Content Remove="..\OrderWeb\appsettings.json" />
  </ItemGroup>
</Project>
