@model OrderWeb.Models.Order
@{
    ViewData["Title"] = "Create Order";
}
<h1>Create Order</h1>
<form method="post">
    <label>Item</label><br/>
    <input name="Item" value="@Model.Item" required /><br/><br/>
    <label>Quantity</label><br/>
    <input type="number" name="Quantity" value="@Model.Quantity" min="1" max="1000" required /><br/><br/>
    <button type="submit">Create</button>
</form>
